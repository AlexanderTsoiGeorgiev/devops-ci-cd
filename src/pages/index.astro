<style>
	.hero {
		position: relative;
		min-height: 70vh;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		padding: 4rem 2rem;
		overflow: hidden;
	}

	.hero-gradient {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
